{% layout 'layout.liquid' %}
{% block content %}

  <div class="container-sm">
    {%- comment -%}
      change the action
    {%- endcomment -%}
    {%- comment -%}
      add values to input fields
    {%- endcomment -%}
    {%- comment -%}
      add a back button
    {%- endcomment -%}
    <form action="/macros/{{macro.id}}?_method=PUT" method="POST">
      <fieldset>
        <legend>Edit
          {{macro.name}}
        </legend>
        <label class="form-label">Name:
        </label>
        <input class="form-control" type="text" name="name" placeholder="enter the name of the fruit" value="{{ macro.name }}">
        <label class="form-label">Color:
        </label>
        <input class="form-control" type="color" name="color" placeholder="what color is the fruit?" value="{{ macro.color }}">
        <label class="form-label">Ready To Eat:
        </label>
        <input class="form-check-input" type="checkbox" name="readyToEat"
          {% if macro.readyToEat %}
          checked
          {% endif %}>
      </fieldset>
      <input class="btn btn-success" type="submit" value="Edit {{macro.name}}">
    </form>
  </div>

{% endblock %}}}}}